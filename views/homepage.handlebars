<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="border border-3 border-dark rounded row mb-4 post">
  <div class="col-md-5">
    <h2 class="post-title">
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/posts/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Created by <a href="/profile">{{post.user_name}}</a> on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}
